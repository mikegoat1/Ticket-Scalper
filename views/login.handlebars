{{!-- This is a simple login form page/ --}}

{{!-- Login Card --}}
<div class="row justify-content-center align-content-center" id="logSignCard">
  <div class="login-card col-6" id="loginCard">
    <h2 class="page-title">Login</h2>

    <form class="form login-form logSignCardStyle">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input mb-2 ms-1" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input mb-2 ms-1" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>

  </div>
  {{!-- Sign Up Card --}}
  <div class="login-card col-6" id="signupCard">
    <h2 class="page-title">Signup</h2>

    <form class="form signup-form logSignCardStyle">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input mb-2 ms-1" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input mb-2 ms-1" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input mb-2 ms-1" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>

  </div>
</div>

<script src="./js/login.js"></script>